<div class="modal fade" id="@nameof(WeaponPreviewModal)" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @if (Weapon != null)
            {
                <div class="modal-header">
                    <h5 class="modal-title">@Weapon.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="weapon-img-preview border text-center">
                        <img src="@Weapon.ImageUrl" height="350" width="350" />
                    </div>
                    <table class="mt-2 table table-dark">
                        <tbody>
                            <tr>
                                <td>Category</td>
                                <td>@Weapon.Category</td>
                            </tr>
                            <tr>
                                <td>Team</td>
                                <td>@Weapon.Team</td>
                            </tr>
                            <tr>
                                <td>Price</td>
                                <td>$@Weapon.Price</td>
                            </tr>
                            <tr>
                                <td>Kill Reward Multiplier</td>
                                <td>@Weapon.KillRewardMultiplier</td>
                            </tr>
                            <tr>
                                <td>Magazine Amount</td>
                                <td>@Weapon.MagazineAmount</td>
                            </tr>
                        </tbody>
                    </table>
                    <p>@Weapon.Description</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>


@code {

    [Inject]
    private IJSRuntime JSRuntime { get; set; }

    public Weapon Weapon { get; set; }

    public async Task OpenAsync(Weapon weapon)
    {
        Weapon = weapon;
        await JSRuntime.ShowModalAsync(nameof(WeaponPreviewModal));
        StateHasChanged();
    }
}
