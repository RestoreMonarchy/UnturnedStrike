@page "/inventory"

<h3>Your Inventory</h3>
<div class="row justify-content-center">
    @if (PlayerWeaponSkins != null)
    {
        foreach (var weaponSkin in PlayerWeaponSkins)
        {
            <div class="m-2">
                <div class="weapon">
                    <a href="javascript:void(0)" @onclick="() => PreviewAsync(weaponSkin.WeaponSkin)">
                        <img class="weapon-img" src="@weaponSkin.WeaponSkin.ImageUrl" width="235" height="235" />
                    </a>
                    <span class="weapon-title">@weaponSkin.WeaponSkin.Name</span>
                </div>                
                <div class="mt-2">
                    <button class="btn btn-primary btn-block" @onclick="() => ToggleEquipSkinAsync(weaponSkin)">@(weaponSkin.IsEquiped ? "Dequip" : "Equip")</button>
                    <button class="btn btn-primary btn-block">Sell</button>
                </div>
            </div>
        }
    }
    else
    {
        <h4>You don't have anything in your inventory</h4>
    }
</div>

<WeaponSkinPreviewModal @ref="PreviewModal" />